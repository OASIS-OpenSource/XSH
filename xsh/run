#variables
version="0.0.1"
red="\e[31m"
green="\e[32m"
blue="\e[34m"
cyan="\e[36m"
end="\e[0m"

#banner/credits
echo -e "$red ▒██   ██▒     ██████     ██░ ██ "
echo " ▒▒ █ █ ▒░   ▒██    ▒    ▓██░ ██▒"
