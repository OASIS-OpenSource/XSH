#functions
check () {
  if [ $1 = "01" ]; then
    ipLookUp
  fi
}

ipLookUp () {
  ./ip-track
}

#options
echo ""
echo -e " $red[$end 01 $red]$end IP Lookup"
echo ""

#choose
read -p " choose an option: " answer
check $answer
